<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginText" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/passwordText" android:inputType="text"
            android:nextFocusForward="@+id/passwordText"
            android:text="user"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true" android:layout_marginTop="59dp"
            android:text="user"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Login"
            android:id="@+id/textView" android:layout_alignBottom="@+id/loginText"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:id="@+id/textView2" android:layout_alignBottom="@+id/passwordText"
            android:layout_alignTop="@+id/passwordText" android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/passwordText"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Login"
            android:id="@+id/loginButton"
            android:layout_marginTop="41dp" android:layout_below="@+id/passwordText"
            android:layout_alignStart="@+id/passwordText" android:layout_marginStart="41dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/registerButton"
            android:layout_marginStart="72dp" android:layout_alignTop="@+id/loginButton"
            android:layout_alignParentStart="true"/>

</RelativeLayout>
